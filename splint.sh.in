#!/bin/env sh


if [ "x@SPLINT@" = "xSPLINT-NOTFOUND" ]; then
    echo SKIP!
    exit 0
    #exit 77
fi

ret=0
for e in h c; do
    for i in `find ${SRCDIR} -iname \*.$e -print`; do
        ${SPLINT} -weak $i
        r=$?
        if [ $r -ne 0 ]; then
            ret=$r
        fi
    done
done
exit $ret
